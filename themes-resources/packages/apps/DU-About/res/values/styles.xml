<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>

        <!--4dp padding around the card-->
        <item name="android:layout_marginLeft">@dimen/card_sides_margin</item>
        <item name="android:layout_marginRight">@dimen/card_sides_margin</item>
        <item name="android:layout_marginTop">@dimen/card_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/card_vertical_margin</item>

        <item name="android:clickable">true</item>
        <!--<item name="android:foreground">?activatable_card_selector</item>-->
        <item name="cardBackgroundColor">?card_background</item>
        <item name="cardCornerRadius">@dimen/cardview_default_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="TabIndicator" />

</resources>
